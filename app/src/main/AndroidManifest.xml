<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.theapache64.nemo">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".Nemo"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Nemo">
        <activity android:name=".feature.address.AddressListActivity"></activity>
        <activity android:name=".feature.ordersummary.OrderSummaryActivity" />
        <activity
            android:name=".feature.cart.CartActivity"
            android:exported="true" />
        <activity
            android:name=".feature.home.HomeActivity"
            android:exported="true" />
        <activity
            android:name=".feature.productdetail.ProductDetailActivity"
            android:exported="true" />
        <activity android:name=".feature.splash.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".feature.products.ProductsActivity"
            android:exported="true" />
    </application>

</manifest>